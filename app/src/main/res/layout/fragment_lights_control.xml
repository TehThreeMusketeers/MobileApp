<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sunicola.setapp.fragments.TriggerFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/text_colour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/colour_text"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/seek_colour"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_colour" />

        <TextView
            android:id="@+id/text_brightness"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/brightness_text"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seek_colour" />

        <SeekBar
            android:id="@+id/seek_brightness"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_brightness" />

        <Button
            android:id="@+id/button_off"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@android:color/holo_blue_bright"
            android:text="@string/button_off_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_all" />

        <Button
            android:id="@+id/button_all"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/holo_blue_bright"
            android:text="@string/button_all_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_bulb_two" />

        <Button
            android:id="@+id/button_bulb_one"
            android:layout_width="62dp"
            android:layout_height="46dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/holo_blue_bright"
            android:text="@string/button_bulb_one_text"
            app:layout_constraintEnd_toStartOf="@+id/button_bulb_two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seek_brightness" />

        <Button
            android:id="@+id/button_bulb_three"
            android:layout_width="62dp"
            android:layout_height="46dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/holo_blue_bright"
            android:text="@string/button_bulb_three_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_bulb_two"
            app:layout_constraintTop_toBottomOf="@+id/seek_brightness" />

        <Button
            android:id="@+id/button_bulb_two"
            android:layout_width="62dp"
            android:layout_height="46dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/holo_blue_bright"
            android:text="@string/button_bulb_two_text"
            app:layout_constraintEnd_toStartOf="@+id/button_bulb_three"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_bulb_one"
            app:layout_constraintTop_toBottomOf="@+id/seek_brightness" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
